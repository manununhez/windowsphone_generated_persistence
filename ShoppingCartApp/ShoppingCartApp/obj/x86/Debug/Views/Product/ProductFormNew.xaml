<Page
    x:Class="ShoppingCartApp.Views.ProductFormNew"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShoppingCartApp.Views">
    <ScrollViewer>
        <Grid x:Name="LayoutRoot">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Panel -->
            <StackPanel Grid.Row="0" Margin="19,0,0,0">
                <TextBlock Text="Persistence App" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0"/>
                <TextBlock Text="Add Product" Margin="0,-6.5,0,26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"/>
            </StackPanel>

            <StackPanel Margin="20,129,19,0" Grid.RowSpan="2">
                <TextBlock Text="IdProducto" FontSize="14"/>
                <TextBox x:Name="IdProductoTbx" TextWrapping="Wrap" Width="350"/>
                <TextBlock Text="Nombre" FontSize="14" />
                <TextBox x:Name="NameTbx" TextWrapping="Wrap" Width="350"/>
                <TextBlock Text="Precio" FontSize="14"/>
                <TextBox x:Name="PrecioTbx" TextWrapping="Wrap" Width="350"/>
                <TextBlock Text="Codigo" FontSize="14"/>
                <TextBox x:Name="CodigoTbx" TextWrapping="Wrap" Width="350"/>
                <TextBlock Text="IdProveedor" FontSize="14"/>
                <TextBox x:Name="IdProveedorTbx" TextWrapping="Wrap" Width="350"/>
                <TextBlock Text="Descripcion" FontSize="14"/>
                <TextBox x:Name="DescriptionTbx" TextWrapping="Wrap" Width="350"/>

                <Button x:ConnectionId='1' x:Name="btnAddProduct" Content="Add Product" HorizontalAlignment="Center"  Height="71" Width="304"                            />
            </StackPanel>


        </Grid>
    </ScrollViewer>
</Page>

